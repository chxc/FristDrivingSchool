<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="10dp">
    <intro.com.fristdrivingschool.Custom.RecyclerImageView
        android:layout_width="wrap_content"
        android:src="@mipmap/test_coach"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        />
    <!--
-->
    <android.support.constraint.ConstraintLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        >
        <TextView
            android:id="@+id/school_training_ground_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="金寨路报名培训处"
            style="@style/style_tv2"
            />

        <TextView
            android:id="@+id/school_training_ground_item_isShortDistance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:background="@drawable/corner_color2_2dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:text="最近"
            android:textColor="@color/color2"
            android:gravity="center"
            android:textSize="12sp"
            app:layout_constraintTop_toTopOf="@id/school_training_ground_item_name"
            app:layout_constraintBottom_toBottomOf="@id/school_training_ground_item_name"
            app:layout_constraintLeft_toRightOf="@id/school_training_ground_item_name" />

        <TextView
            android:id="@+id/school_training_ground_item_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="合肥市金寨南路6111号"
            app:layout_constraintTop_toBottomOf="@id/school_training_ground_item_name"
            style="@style/style_tv3"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            />

        <TextView
            android:id="@+id/school_training_ground_item_distance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="距离   10KM"
            app:layout_constraintTop_toBottomOf="@id/school_training_ground_item_address"
            />

        <TextView
            android:id="@+id/school_training_ground_item_subject"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="科目二、科目三"
            app:layout_constraintTop_toBottomOf="@id/school_training_ground_item_address"
            app:layout_constraintRight_toRightOf="parent"
            />

    </android.support.constraint.ConstraintLayout>

</LinearLayout>