<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    tools:context=".app.Home5.RegisterActivity">

    <LinearLayout
        android:id="@+id/register_top_layout"
        style="@style/style_top_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/register_top_back"
            style="@style/style_top_title_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="注册" />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="45dip"
        android:layout_marginLeft="10dip"
        android:layout_marginTop="20dip"
        android:layout_marginRight="10dip">

        <EditText
            android:id="@+id/register_phone"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/shape_corner_edit"
            android:hint="请输入手机号"
            android:inputType="number"
            android:paddingLeft="50dip"
            android:singleLine="true"
            android:textColor="@color/drak444"
            android:textColorHint="@color/drak666"
            android:textSize="15dip" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:paddingLeft="10dip"
            android:paddingRight="10dip"
            android:src="@mipmap/icon_phone" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dip"
        android:layout_marginLeft="10dip"
        android:layout_marginTop="10dip"
        android:layout_marginRight="10dip"
        android:gravity="center"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/register_token"
            android:layout_width="wrap_content"
            android:layout_height="45dip"
            android:layout_weight="1"
            android:background="@drawable/shape_corner_edit"
            android:hint="请输入验证码"
            android:inputType="number"
            android:paddingLeft="8dip"
            android:singleLine="true"
            android:textColor="@color/drak444"
            android:textColorHint="@color/drak666"
            android:textSize="15dip" />

        <Button
            android:id="@+id/register_gettokenBtu"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="8dip"
            android:layout_marginTop="5dip"
            android:layout_marginBottom="5dip"
            android:background="@drawable/selector_click_btu_theme2_wideline"
            android:gravity="center"
            android:onClick="onClick"
            android:paddingLeft="5dip"
            android:paddingRight="5dip"
            android:text="获取验证码"
            android:textColor="@color/white"
            android:textSize="13dip" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="45dip"
        android:layout_marginLeft="10dip"
        android:layout_marginTop="10dip"
        android:layout_marginRight="10dip">

        <EditText
            android:id="@+id/register_inputPsw"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/shape_corner_edit"
            android:hint="请输入密码"
            android:paddingLeft="50dip"
            android:singleLine="true"
            android:textColor="@color/drak444"
            android:textColorHint="@color/drak666"
            android:textSize="15dip"
            android:inputType="textPassword"
            />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:paddingLeft="10dip"
            android:paddingRight="10dip"
            android:src="@mipmap/icon_ic_password" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="45dip"
        android:layout_marginLeft="10dip"
        android:layout_marginTop="10dip"
        android:layout_marginRight="10dip">

        <EditText
            android:id="@+id/register_inputPswAgain"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/shape_corner_edit"
            android:hint="请再次输入密码"
            android:paddingLeft="50dip"
            android:singleLine="true"
            android:textColor="@color/drak444"
            android:textColorHint="@color/drak666"
            android:textSize="15dip"
            android:inputType="textPassword"
            />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:paddingLeft="10dip"
            android:paddingRight="10dip"
            android:src="@mipmap/icon_ic_password" />
    </RelativeLayout>

    <TextView
        android:id="@+id/register_submit"
        android:layout_width="match_parent"
        android:layout_height="45dip"
        android:layout_marginLeft="10dip"
        android:layout_marginTop="15dip"
        android:layout_marginRight="10dip"
        android:background="@drawable/selector_click_btu_theme2_wideline"
        android:gravity="center"
        android:onClick="onClick"
        android:text="提交"
        android:textColor="@color/white"
        android:textSize="15dip" />



</LinearLayout>