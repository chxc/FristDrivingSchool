<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!--   驾校教练信息  -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/shape_5dip_white_theme2"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/teacher_details_Icon"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:adjustViewBounds="true"
            android:onClick="onClick"
            android:src="@mipmap/icon_head" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">
            <!-- 教练名   -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    style="@style/style_content_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="教练名：" />

                <TextView
                    android:id="@+id/teacher_details_Name"
                    style="@style/style_content"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Tom"
                    android:textColor="@color/color2" />
            </LinearLayout>

            <!-- 教练联系电话   -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    style="@style/style_content_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="联系电话：" />

                <TextView
                    android:id="@+id/teacher_details_Phone"
                    style="@style/style_content"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="157********" />
            </LinearLayout>
            <!-- 教练位置   -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    style="@style/style_content_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="教练位置：" />

                <TextView
                    android:id="@+id/teacher_details_Location"
                    style="@style/style_content"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="157********" />
            </LinearLayout>

            <!-- 所在驾校   -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    style="@style/style_content_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="所属驾校：" />

                <TextView
                    android:id="@+id/teacher_details_BelongTo"
                    style="@style/style_content"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="知心驾校" />
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:background="@color/line" />

        <ImageView
            android:id="@+id/teacher_details_PhoneIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:src="@mipmap/icon_phone" />
    </LinearLayout>

    <!--   教练照片  -->
    <TextView
        style="@style/style_content_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="教练风采" />

    <intro.com.fristdrivingschool.Custom.HorizontalListView
        android:id="@+id/teacher_details_pic"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:padding="10dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp">

        <View
            android:layout_width="5dp"
            android:layout_height="match_parent"
            android:layout_marginRight="10dp"
            android:background="@color/theme1" />

        <TextView
            style="@style/style_content_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="学员评价：" />
    </LinearLayout>

</LinearLayout>