<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp">
        <ImageView
            android:id="@+id/student_comment_item_icon"
            style="@style/style_icon"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="10dp"
            android:layout_gravity="center"
            >
            <TextView
                android:id="@+id/student_comment_item_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="车神0001"
                style="@style/style_content_name"
                android:drawableRight="@mipmap/star_10"
                />

            <TextView
                android:id="@+id/student_comment_item_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="教练真不错"
                android:textSize="10sp"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <TextView
                    android:id="@+id/student_comment_item_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2019年02月21日"
                    android:textSize="10sp"
                    />
                <TextView
                    android:id="@+id/student_comment_item_praise"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="赞10"
                    android:textSize="10sp"
                    android:gravity="right"
                    />
            </LinearLayout>
        </LinearLayout>
</LinearLayout>